@model FancyQuoteApp.Models.Quote
<!DOCTYPE html>
<html>
<head>
    <title>Quote of the Day</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            background: linear-gradient(135deg, #2c3e50, #4ca1af);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .quote-card {
            padding: 40px;
            border-radius: 20px;
            max-width: 600px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
            animation: fadeIn 1.5s ease-in-out;
            transition: all 0.4s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .quote-text {
            font-size: 1.6rem;
            font-style: italic;
        }

        .quote-author {
            font-size: 1.2rem;
            margin-top: 20px;
            text-align: right;
        }

        #newQuoteBtn {
            margin-top: 30px;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <div class="quote-card">
        <div class="quote-text">"@Model.Text"</div>
        <div class="quote-author">‚Äî @Model.Author</div>
    </div>

    <button id="newQuoteBtn" class="btn btn-lg" style="background-color: rgba(255,255,255,0.1); color: white; border: 1px solid white;">üîÅ Get Another Quote</button>

    <script>
        document.getElementById("newQuoteBtn").addEventListener("click", async () => {
            const res = await fetch("/Home/GetRandomQuote");
            const data = await res.json();

            document.querySelector(".quote-text").innerText = `"${data.text}"`;
            document.querySelector(".quote-author").innerText = `‚Äî ${data.author}`;
        });
    </script>
</body>
</html>
